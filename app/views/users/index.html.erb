<h3>Users</h3>
<table class="table table-striped" style="width:80%">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">email</th>
      <th scope="col">role</th>
      <th scope="col">Edit </th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <th scope="row"><%=user.id%></th>
      <td><%=user.email%></td>
      <td><%=user.roles.pluck(:name)%></td>
      <td><%= link_to "edit", edit_user_path(user) %></td>
    </tr>
   <% end %>  
    </tbody>
</table>

