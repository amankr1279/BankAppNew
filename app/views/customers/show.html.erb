<div class='m-4'>
<p style="color: green"><%= notice %></p>

<%= render @customer %>
</div>
<div>
  <%= link_to "Edit this customer", edit_customer_path(@customer) %> |
  <%= link_to "Back to customers", customers_path %>
</div>
<br/>
<div>  
  <%= button_to "Destroy this customer", @customer, method: :delete ,form: { data: { turbo_confirm: 'Are you sure?' } } %>
</div>
<br/>
<section class="section accounts">
  <div class="container">
    <h2 class="subtitle is-5">
      <strong><%= @customer.accounts.count %></strong> Accounts
    </h2>
      <div id="accounts">
      <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Branch Name</th>
              <th scope="col">IFSC Code</th>
              <th scope="col">Name</th>
              <th scope="col">Account Type</th>
            <th scope="col">Balance</th>
            <th scope="col"> </th>
            </tr>
          </thead>
          <tbody>
          <% @customer.accounts.each do |account| %>
            <tr>
              <th scope="row"><%=account.id%></th>
              <td><%=BankBranch.find_by(id: account.bank_branch_id).branchname%></td>
            <td><%=BankBranch.find_by(id: account.bank_branch_id).ifsc%></td>
            <td><%=account.account_type%></td>
            <td><%=account.balance%></td>
            <td><%= link_to "Show", account %></td>
            </tr>
          <% end %>  
            </tbody>
        </table>
    </div>
    <div class="customer-form">
      <hr />
      <p class="subtitle is-3">Create  Account  <%= link_to "New account", new_account_path %> </p>
    </div>
  </div>
</section>